<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#5e82ed" />
            <gradient
                android:angle="-90"
                android:startColor="#4e6fe7"
                android:endColor="#919af9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#5e82ed" />

            <solid android:color="#4e6fe7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#5e82ed" />
            <gradient
                android:angle="-90"
                android:startColor="#919af9"
                android:endColor="#4e6fe7" />
        </shape>
    </item>
</selector>